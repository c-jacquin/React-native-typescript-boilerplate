{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "../build",
        "rootDir": "../src",
        "removeComments": false,
        "lib":["es2017"],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "baseUrl": "../src",
        "typeRoots": [
            "../typings"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": [
        "../src/**/*",
        "./index.d.ts"
    ]
}
