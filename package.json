{
  "name": "react-native-ts-boilerplate",
  "version": "0.0.0",
  "private": true,
  "author": "Charles Jacquin <charles.jacquin@gmail.com>",
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/charjac/React-native-typescript-boilerplate.git"
  },
  "scripts": {
    "generate": "plop --plopfile _generators_/index.js",
    "postinstall": "rimraf node_modules/intl/.babelrc",
    "cz": "git-cz",
    "precommit": "lint-staged",
    "prepush": "npm run test -- --forceExit && npm run clean",
    "clean": "ts-node --project _scripts_/ _scripts_/utils/clean",
    "prestart": "npm run prebuild",
    "start": "NODE_ENV=development tsc --watch",
    "prebuild": "rimraf build && mkdir build",
    "build": "NODE_ENV=production tsc",
    "test": "NODE_ENV=test jest",
    "posttest": "ts-node --project _scripts_/ _scripts_/testHook/remap-coverage && rimraf .temp -r",
    "watch:test": "NODE_ENV=test jest --watch",
    "postwatch:test": "npm run clean",
    "docs": "typedoc --out docs/doc src/index.ts",
    "prettier": "prettier --tab-width 4 --write --no-semi --single-quote --trailing-comma es5 --parser typescript \"src/**/*(*.ts|*.tsx)\"",
    "release": "standard-version --no-verify",
    "release:postcommit": "ts-node --project _scripts_/ _scripts_/releaseHook/postcommit",
    "release:posttag": "ts-node --project _scripts_/ _scripts_/releaseHook/posttag"
  },
  "dependencies": {
    "autobind-decorator": "^2.1.0",
    "expo": "20.1.3",
    "glamorous-native": "^1.1.2",
    "intl": "^1.2.5",
    "prop-types": "^15.5.10",
    "react": "16.0.0-rc.2",
    "react-intl": "^2.4.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-20.0.0.tar.gz",
    "react-navigation": "^1.0.0-beta.12",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-observable": "^0.16.0",
    "redux-storage": "^4.1.2",
    "redux-storage-engine-reactnativeasyncstorage": "^1.0.5",
    "reselect": "^3.0.1",
    "rxjs": "^5.4.3"
  },
  "devDependencies": {
    "@types/fbemitter": "^2.0.32",
    "@types/jest": "^20.0.8",
    "@types/marked": "^0.3.0",
    "@types/nock": "^8.2.1",
    "@types/node": "^8.0.28",
    "@types/prop-types": "^15.5.1",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.4",
    "@types/react-helmet": "^5.0.3",
    "@types/react-intl": "^2.3.1",
    "@types/react-native": "^0.48.0",
    "@types/react-navigation": "^1.0.20",
    "@types/react-redux": "^5.0.7",
    "@types/react-test-renderer": "^15.5.4",
    "@types/redux-immutable-state-invariant": "^2.0.2",
    "@types/redux-mock-store": "0.0.11",
    "@types/redux-storage": "^4.0.10",
    "@types/remote-redux-devtools": "^0.5.1",
    "@types/rimraf": "^2.0.2",
    "babel-jest": "^21.0.0",
    "babel-plugin-jest-hoist": "^21.0.2",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "child-process-promise": "^2.2.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "exp": "^44.0.0",
    "fbemitter": "^2.1.1",
    "fs-extra": "^4.0.2",
    "git-branch": "^1.0.0",
    "html": "^1.0.0",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "jest-expo-ts": "^20.0.0",
    "jest-html-reporter": "^0.5.1",
    "json-format": "^1.0.1",
    "lint-staged": "^4.1.3",
    "marked": "^0.3.6",
    "nock": "^9.0.20",
    "node-fetch": "^1.7.3",
    "plop": "^1.8.1",
    "prettier": "^1.6.1",
    "react-dom": "16.0.0-rc.2",
    "react-helmet": "^5.2.0",
    "react-test-renderer": "16.0.0-rc.2",
    "redux-mock-store": "^1.2.3",
    "remap-istanbul": "^0.9.5",
    "remote-redux-devtools": "^0.5.12",
    "rimraf": "^2.6.1",
    "standard-version": "^4.2.0",
    "ts-jest": "^21.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-react": "^3.2.0",
    "typedoc": "^0.8.0",
    "typescript": "^2.5.2",
    "xhr2": "^0.1.4"
  },
  "jest-html-reporter": {
    "pageTitle": "Test report",
    "outputPath": "docs/test-report/index.html",
    "includeFailureMsg": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*(*.ts|*.tsx)": [
      "npm run prettier",
      "git add -A"
    ]
  },
  "standard-version": {
    "scripts": {
      "postcommit": "npm run release:postcommit",
      "posttag": "npm run release:posttag"
    }
  }
}
