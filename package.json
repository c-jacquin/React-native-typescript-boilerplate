{
    "name": "ReactNativeTsBoilerplate",
    "version": "1.0.0",
    "private": true,
    "author": "Charles Jacquin <charles.jacquin@gmail.com>",
    "main": "build/index.js",
    "scripts": {
        "generate": "plop --plopfile __generators__/index.js",
        "postinstall": "rm -f node_modules/intl/.babelrc",
        "pregitcommit": "npm run test",
        "gitcommit": "git-cz",
        "precommit": "lint-staged",
        "prestart": "npm run prebuild",
        "start": "NODE_ENV=development tsc --watch",
        "clean": "node node_modules/.bin/rimraf build",
        "prebuild": "npm run clean && mkdir build",
        "build": "NODE_ENV=production tsc",
        "pretest": "npm run clean && NODE_ENV=test tsc",
        "test": "NODE_ENV=test jest",
        "tdd": "NODE_ENV=test jest --watch",
        "release": "standard-version",
        "prettier": "prettier --tab-width 4 --write --no-semi --single-quote --trailing-comma es5 --parser typescript \"src/**/*(*.ts|*.tsx)\""
    },
    "dependencies": {
        "autobind-decorator": "^1.4.1",
        "expo": "17.0.0",
        "intl": "^1.2.5",
        "lint-staged": "^3.6.1",
        "react": "16.0.0-alpha.6",
        "react-intl": "^2.3.0",
        "react-native": "https://github.com/expo/react-native/archive/sdk-17.0.0.tar.gz",
        "react-navigation": "^1.0.0-beta.11",
        "react-redux": "^5.0.5",
        "redux": "^3.6.0",
        "redux-observable": "^0.14.1",
        "redux-storage": "^4.1.2",
        "redux-storage-engine-reactnativeasyncstorage": "^1.0.5",
        "reselect": "^3.0.1",
        "rxjs": "^5.4.1"
    },
    "devDependencies": {
        "@types/fbemitter": "^2.0.32",
        "@types/jest": "^20.0.2",
        "@types/react": "^15.0.29",
        "@types/react-intl": "^2.3.0",
        "@types/react-native": "^0.44.11",
        "@types/react-navigation": "^1.0.15",
        "@types/react-redux": "^4.4.43",
        "@types/react-test-renderer": "^15.5.0",
        "@types/redux-immutable-state-invariant": "^2.0.0",
        "@types/redux-mock-store": "0.0.8",
        "@types/redux-storage": "^4.0.7",
        "@types/remote-redux-devtools": "^0.5.0",
        "babel-jest": "^20.0.3",
        "babel-plugin-jest-hoist": "^20.0.3",
        "babel-plugin-module-resolver": "^2.7.1",
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "commitizen": "^2.9.6",
        "cz-conventional-changelog": "^2.0.0",
        "fbemitter": "^2.1.1",
        "husky": "^0.13.4",
        "jest": "^20.0.4",
        "jest-expo-ts": "^0.3.0",
        "plop": "^1.8.0",
        "prettier": "^1.4.4",
        "react-test-renderer": "^15.6.1",
        "redux-immutable-state-invariant": "^2.0.0",
        "redux-mock-store": "^1.2.3",
        "remote-redux-devtools": "^0.5.11",
        "rimraf": "^2.6.1",
        "standard-version": "^4.2.0",
        "ts-jest": "^20.0.6",
        "tslint": "^5.4.3",
        "tslint-config-prettier": "^1.1.0",
        "tslint-react": "^3.0.0",
        "typescript": "^2.3.4"
    },
    "jest": {
        "moduleDirectories": [
            "node_modules",
            "build"
        ],
        "moduleFileExtensions": [
            "js"
        ],
        "preset": "jest-expo-ts",
        "setupFiles": [
            "./__scripts__/test-setup.js"
        ],
        "testPathIgnorePatterns": [
            "<rootDir>/src/",
            "<rootDir>/node_modules/"
        ],
        "transform": {
            "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "src/**/*(*.ts|*.tsx)": [
            "prettier --tab-width 4 --write --no-semi --single-quote --trailing-comma es5 --parser typescript",
            "git add -A"
        ]
    }
}
