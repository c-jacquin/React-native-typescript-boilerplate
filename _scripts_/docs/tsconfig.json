{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": false,
        "outDir": "./.temp",
        "rootDir": "./",
        "removeComments": false,
        "lib":["dom","es2017"],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "typeRoots": [
            "typings"
        ],
        "allowSyntheticDefaultImports": true,

        "experimentalDecorators": true
    },
    "include": [
        "./"
    ],
    "exclude": [
        "../../node_modules"
    ]
}
