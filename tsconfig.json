{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./build",
        "rootDir": "./src",
        "removeComments": false,
        "lib":["dom","es2017"],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "baseUrl": "src",
        "typeRoots": [
            "typings",
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*",
        "typings/**/*.d.ts"
    ],
    "exclude": [
        "src/**/__mocks__/*",
        "src/**/__tests__/*",
    ]
}
